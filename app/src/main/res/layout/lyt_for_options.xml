            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_check_24"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/bredtick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_highlight_off_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
        <com.englivia.quiz.helper.AudienceProgress
            android:id="@+id/progress_B"
            android:layout_width="@dimen/circle_progress"
            android:layout_height="@dimen/circle_progress"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp"
            android:visibility="gone"
            app:direction="clockwise" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/padding_15"
        android:layout_marginEnd="@dimen/padding_15"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="15dp"
        app:cardCornerRadius="30dp"
        card_view:cardElevation="15dp"
        card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/c_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingEnd="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp">

        <TextView
