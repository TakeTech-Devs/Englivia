            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/txt_color" />
        <ImageView
            android:id="@+id/cgreentick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/credtick"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_highlight_off_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>
        <com.englivia.quiz.helper.AudienceProgress
            android:id="@+id/progress_C"
            android:layout_width="@dimen/circle_progress"
            android:layout_height="@dimen/circle_progress"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp"
            android:visibility="gone"
            app:direction="clockwise" />
    </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/padding_15"
        android:layout_marginEnd="@dimen/padding_15"
        android:layout_marginBottom="@dimen/margin_20dp"
