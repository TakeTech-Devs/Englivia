<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>

            <solid android:color="#00bbbdcb" />
            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#05bbbdcb" />

            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#0abbbdcb" />
            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#0fbbbdcb" />
            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>
    <item>
        <shape>


            <solid android:color="#14bbbdcb" />

            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <gradient
                android:angle="360"
                android:endColor="@color/white"
                android:startColor="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>
    <item>
        <shape>

            <gradient
                android:angle="90"
                android:endColor="#AE9D9D"
                android:startColor="@color/purple"
                />
            <corners
                android:bottomLeftRadius="@dimen/margin_20dp"
                android:bottomRightRadius="@dimen/margin_20dp"
                android:topLeftRadius="@dimen/margin_20dp"
                android:topRightRadius="@dimen/margin_20dp"
                />
        </shape>
    </item>


</layer-list>